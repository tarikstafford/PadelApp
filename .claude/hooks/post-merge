#!/bin/bash
set -e

echo "üîÑ PadelGo Post-merge Hook - Dependency Update"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Change to the padel-app directory
cd "$(git rev-parse --show-toplevel)/padel-app"

# Check if package.json or requirements have changed
if git diff --name-only HEAD@{1} HEAD | grep -E "(package\.json|pnpm-lock\.yaml|pyproject\.toml)"; then
    echo -e "${YELLOW}üì¶ Dependencies changed, updating...${NC}"
    pnpm install
    
    # Check if there are database migrations
    cd apps/api
    if git diff --name-only HEAD@{1} HEAD | grep -E "migrations/.*\.py"; then
        echo -e "${YELLOW}üóÑÔ∏è Database migrations detected${NC}"
        echo -e "${YELLOW}‚ö†Ô∏è Remember to run database migrations:${NC}"
        echo -e "${YELLOW}   cd apps/api && alembic upgrade head${NC}"
    fi
    cd ../../
fi

echo -e "${GREEN}‚úÖ Post-merge cleanup completed!${NC}"