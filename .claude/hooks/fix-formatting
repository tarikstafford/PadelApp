#!/bin/bash
# Auto-fix formatting issues for PadelGo
set -e

echo "ğŸ”§ PadelGo Auto-fix Formatting"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Change to the padel-app directory
cd "$(git rev-parse --show-toplevel)/padel-app"

echo -e "${YELLOW}ğŸ”§ Auto-fixing formatting issues...${NC}"

# Frontend formatting
echo -e "${YELLOW}ğŸ¨ Formatting frontend code...${NC}"
pnpm format

# ESLint auto-fix
echo -e "${YELLOW}ğŸ§¹ ESLint auto-fix...${NC}"
cd apps/web
pnpm lint:fix 2>/dev/null || true

cd ../club-admin
pnpm lint:fix 2>/dev/null || true

cd ../../

# Python formatting
echo -e "${YELLOW}ğŸ Python formatting...${NC}"
cd apps/api

# Black formatting
black .

# Ruff auto-fix
ruff check --fix .

cd ../../

echo -e "${GREEN}âœ… Formatting fixes applied!${NC}"
echo -e "${YELLOW}ğŸ“ Please review changes and commit if appropriate${NC}"