#!/bin/bash
set -e

echo "ğŸ” PadelGo Pre-commit Hook - Quality Verification"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Change to the padel-app directory
cd "$(git rev-parse --show-toplevel)/padel-app"

echo -e "${YELLOW}ğŸ“¦ Installing dependencies...${NC}"
pnpm install --frozen-lockfile

echo -e "${YELLOW}ğŸ”§ Running linters and type checks...${NC}"

# TypeScript checks for frontend apps
echo -e "${YELLOW}ğŸ” TypeScript checks...${NC}"
cd apps/web
if ! pnpm typecheck; then
    echo -e "${RED}âŒ Web app TypeScript errors found${NC}"
    exit 1
fi

cd ../club-admin
if ! pnpm typecheck; then
    echo -e "${RED}âŒ Club admin TypeScript errors found${NC}"
    exit 1
fi

cd ../../

# ESLint checks
echo -e "${YELLOW}ğŸ§¹ ESLint checks...${NC}"
if ! pnpm lint; then
    echo -e "${RED}âŒ ESLint errors found${NC}"
    exit 1
fi

# Python linting for API
echo -e "${YELLOW}ğŸ Python linting...${NC}"
cd apps/api

if ! ruff check .; then
    echo -e "${RED}âŒ Ruff linting errors found${NC}"
    exit 1
fi

if ! black --check .; then
    echo -e "${RED}âŒ Black formatting errors found${NC}"
    exit 1
fi

if ! mypy .; then
    echo -e "${RED}âŒ MyPy type checking errors found${NC}"
    exit 1
fi

cd ../../

# Build check
echo -e "${YELLOW}ğŸ—ï¸ Build verification...${NC}"
if ! pnpm build; then
    echo -e "${RED}âŒ Build failed${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"